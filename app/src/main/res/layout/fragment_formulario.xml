<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioFragment"
    android:background="@color/azulito">

    <TextView
        android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imdbID"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/textId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textId"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/editTextTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        app:layout_constraintTop_toBottomOf="@id/textTipo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editTextId"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/editTextId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="9"
        app:layout_constraintTop_toBottomOf="@id/textTitulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/editTextGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        app:layout_constraintTop_toBottomOf="@id/textGenero"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editTextYear"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTitulo"
        app:layout_constraintLeft_toRightOf="@id/textGenero"
        app:layout_constraintRight_toLeftOf="@id/textPais"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        app:layout_constraintTop_toBottomOf="@id/textYear"
        app:layout_constraintLeft_toRightOf="@id/editTextGenero"
        app:layout_constraintRight_toLeftOf="@id/editTextPais"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pais"
        android:textSize="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTitulo"
        app:layout_constraintLeft_toRightOf="@id/textYear"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        app:layout_constraintTop_toBottomOf="@id/textPais"
        app:layout_constraintLeft_toRightOf="@id/editTextYear"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/textPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL Poster"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/editTextGenero"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="9"
        app:layout_constraintTop_toBottomOf="@id/textPoster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="ENVIAR"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPoster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/verdecito"
        />

    <Button
        android:id="@+id/buttonVer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Ver Peliculas"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/buttonEnviar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/rosita"/>


</androidx.constraintlayout.widget.ConstraintLayout>