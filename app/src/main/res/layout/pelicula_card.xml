<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/TextId"
        android:layout_width="50dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="imdbID"
        android:textSize="16sp"
        android:maxLines="2"
        android:background="@color/rosita"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/TextPais"
        android:layout_width="100dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/TextId"
        android:text="Pais"
        android:textSize="16sp"
        android:maxLines="2"
        android:background="@color/rosita"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/ImagePoster"
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/TextId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/TextTitulo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/ImagePoster"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="Titulo de la Pelicula"
        android:textSize="17sp"
        android:maxLines="2"
        android:background="@color/rosita"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/TextTipo"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="8dp"
        android:background="@color/rosita"
        android:text="Tipo"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextTitulo" />

    <TextView
        android:id="@+id/TextYear"
        android:layout_width="100dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/TextTitulo"
        app:layout_constraintLeft_toRightOf="@id/TextTipo"
        android:text="AÃ±o"
        android:textSize="16sp"
        android:background="@color/rosita"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/TextGenero"
        android:layout_width="150dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/TextTipo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="Genero"
        android:textSize="13sp"
        android:background="@color/rosita"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

